<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00000000">

    <TextView
        android:id="@+id/tv_vLine"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="@color/red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ownershipStructure_listItemCompanyRate"/>

    <TextView
        android:id="@+id/tv_hLine"
        android:layout_width="20dp"
        android:layout_height="2dp"
        android:background="@color/red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_vLine"
        app:layout_constraintLeft_toRightOf="@id/tv_vLine"/>

    <TextView
        android:id="@+id/tv_vLine2"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:background="@color/red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ownershipStructure_listItemCompanyRate"
        app:layout_constraintLeft_toRightOf="@id/tv_hLine"/>

    <TextView
        android:id="@+id/tv_ownershipStructure_listItemCompany"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="123"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_vLine2"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_ownershipStructure_listItemCompanyRate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="123"
        android:textSize="9sp"
        android:textColor="@color/darkGrey"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_ownershipStructure_listItemCompany"
        app:layout_constraintLeft_toRightOf="@id/tv_vLine2"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="2dp"
        android:layout_height="7dp"
        android:background="@color/red"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_ownershipStructure_listItemCompanyRate"/>

</android.support.constraint.ConstraintLayout>
