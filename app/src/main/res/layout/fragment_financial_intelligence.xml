<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_financialIntelligence_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="融信"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:background="@color/lightGrey"
        android:padding="3dp" />

    <ImageView
        android:id="@+id/iv_financialIntelligence_backIcon"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:srcCompat="@drawable/backicon" />

    <Spinner
        android:id="@+id/sp_financialIntelligence_selectProduct"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_financialIntelligence_Title"
        app:layout_constraintStart_toStartOf="parent">

    </Spinner>

    <LinearLayout
        android:id="@+id/lLayout_financialIntelligence_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_financialIntelligence_selectProduct"
        android:layout_marginTop="13dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle_edge"
                android:gravity="center"
                android:text="融资企业"
                android:padding="3dp"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/et_financialIntelligence_companyName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle_edge"
                android:singleLine="true"
                android:gravity="center"
                android:padding="3dp"
                android:textColorHint="@color/red"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle_edge_dark"
                android:gravity="center"
                android:text="投资机构"
                android:padding="3dp"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/et_financialIntelligence_fundingFacility"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle_edge_dark"
                android:lines="1"
                android:gravity="center"
                android:padding="3dp"
                android:textColorHint="@color/red"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle_edge"
                android:gravity="center"
                android:text="资产管理方"
                android:padding="3dp"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/et_financialIntelligence_capitalManager"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle_edge"
                android:lines="1"
                android:gravity="center"
                android:padding="3dp"
                android:textColorHint="@color/red"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle_edge_dark"
                android:gravity="center"
                android:text="资产发行方"
                android:padding="3dp"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/et_financialIntelligence_capitalIssuer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle_edge_dark"
                android:lines="1"
                android:gravity="center"
                android:padding="3dp"
                android:textColorHint="@color/red"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle_edge"
                android:gravity="center"
                android:text="托管机构"
                android:padding="3dp"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/et_financialIntelligence_depositFacility"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle_edge"
                android:lines="1"
                android:gravity="center"
                android:padding="3dp"
                android:textColorHint="@color/red"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle_edge_dark"
                android:gravity="center"
                android:text="授信金额"
                android:padding="3dp"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/et_financialIntelligence_creditAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle_edge_dark"
                android:lines="1"
                android:gravity="center"
                android:padding="3dp"
                android:textColorHint="@color/red"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle_edge"
                android:gravity="center"
                android:text="融资金额"
                android:padding="3dp"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/et_financialIntelligence_financingAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle_edge"
                android:lines="1"
                android:gravity="center"
                android:padding="3dp"
                android:textColorHint="@color/red"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle_edge_dark"
                android:gravity="center"
                android:text="价格"
                android:padding="3dp"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/et_financialIntelligence_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle_edge_dark"
                android:lines="1"
                android:gravity="center"
                android:padding="3dp"
                android:textColorHint="@color/red"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle_edge"
                android:gravity="center"
                android:text="期限"
                android:padding="3dp"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/et_financialIntelligence_expireTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle_edge"
                android:lines="1"
                android:gravity="center"
                android:padding="3dp"
                android:textColorHint="@color/red"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle_edge_dark"
                android:gravity="center"
                android:text="担保"
                android:padding="3dp"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <Spinner
                android:id="@+id/sp_financialIntelligence_insurance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:background="@drawable/rectangle_edge_dark"
                android:spinnerMode="dialog">

            </Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle_edge"
                android:gravity="center"
                android:text="主要条款"
                android:padding="3dp"
                android:textColor="@color/black"
                android:textSize="17sp" />
            <Spinner
                android:id="@+id/sp_financialIntelligence_mainArticle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:background="@drawable/rectangle_edge"
                android:spinnerMode="dialog">

            </Spinner>
        </LinearLayout>

    </LinearLayout>

        <Button
            android:id="@+id/bt_financialIntelligence_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            app:layout_constraintTop_toBottomOf="@id/lLayout_financialIntelligence_form"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/bt_financialIntelligence_submit"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/bt_financialIntelligence_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            app:layout_constraintTop_toBottomOf="@id/lLayout_financialIntelligence_form"
            app:layout_constraintStart_toEndOf="@id/bt_financialIntelligence_save"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"/>

    <LinearLayout
        android:id="@+id/lLayout_financialIntelligence_navigator"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_financialIntelligence_homepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_weight="1"
            android:text="首页"
            android:textColor="@color/darkGrey"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_financialIntelligence_financialReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_weight="1"
            android:text="融报"
            android:textColor="@color/darkGrey"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_financialIntelligence_financialIntel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_weight="1"
            android:text="融信"
            android:textColor="@color/red"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_financialIntelligence_business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_weight="1"
            android:text="商机"
            android:textColor="@color/darkGrey"
            android:textSize="20sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>