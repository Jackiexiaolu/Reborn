<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="200dp"
        android:layout_height="177dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_preRegisterPage_title"
        app:srcCompat="@drawable/wode" />

    <TextView
        android:id="@+id/tv_preRegisterPage_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightGrey"
        android:gravity="center"
        android:padding="5dp"
        android:text="注册"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tv_preRegisterPage_title"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/backicon" />

    <EditText
        android:id="@+id/et_preRegisterPage_phoneNumber"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="手机号码"
        android:inputType="phone"
        android:lines="1"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />

    <EditText
        android:id="@+id/et_preRegisterPage_verificationCode"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:hint="验证码"
        android:lines="1"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/et_preRegisterPage_phoneNumber"
        app:layout_constraintTop_toBottomOf="@+id/et_preRegisterPage_phoneNumber" />

    <ImageView
        android:id="@+id/iv_preRegisterPage_graphicCode"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/et_preRegisterPage_smsCode"
        app:layout_constraintStart_toEndOf="@+id/et_preRegisterPage_verificationCode"
        app:layout_constraintTop_toBottomOf="@+id/et_preRegisterPage_phoneNumber" />

    <EditText
        android:id="@+id/et_preRegisterPage_smsCode"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="短信验证码"
        android:lines="1"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_preRegisterPage_verificationCode" />

    <TextView
        android:id="@+id/tv_preRegisterPage_sendSms"
        android:layout_width="60dp"
        android:layout_height="30sp"
        android:text="获取验证码"
        android:textSize="10sp"
        android:gravity="center"
        android:background="@drawable/validate_code_press_bg"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_preRegisterPage_smsCode"
        app:layout_constraintEnd_toEndOf="@+id/et_preRegisterPage_smsCode"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/et_preRegisterPage_smsCode"
        app:layout_constraintTop_toTopOf="@+id/et_preRegisterPage_smsCode"
        app:layout_constraintVertical_bias="0.3" />

    <EditText
        android:id="@+id/et_preRegisterPage_password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="密码"
        android:inputType="textPassword"
        android:lines="1"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_preRegisterPage_smsCode" />

    <EditText
        android:id="@+id/et_preRegisterPage_confirmPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="确认密码"
        android:inputType="textPassword"
        android:lines="1"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_preRegisterPage_password" />

    <Button
        android:id="@+id/bt_preRegisterPage_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="提交"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_preRegisterPage_confirmPassword" />


</android.support.constraint.ConstraintLayout>