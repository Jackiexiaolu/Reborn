<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginEnd="20dp"
    android:background="#EFEFEF"
   >

    <ImageView
        android:id="@+id/iv_companyItem_rectangle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_companyItem_legalPerson"
        android:src="@drawable/shape_rounded_rectangle_white"/>

    <ImageView
        android:id="@+id/iv_companyItem_Icon"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher_foreground"
        android:background="@color/grey"
        app:layout_constraintLeft_toLeftOf="@id/iv_companyItem_rectangle"
        app:layout_constraintRight_toRightOf="@id/iv_companyItem_rectangle"
        app:layout_constraintTop_toTopOf="@id/iv_companyItem_rectangle"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="13dp" />

    <TextView
        android:id="@+id/iv_companyItem_transparentRectangle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#90FF0000"
        app:layout_constraintBottom_toBottomOf="@id/iv_companyItem_Icon"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@id/iv_companyItem_Icon"
        app:layout_constraintRight_toRightOf="@id/iv_companyItem_Icon"
        app:layout_constraintTop_toTopOf="@id/iv_companyItem_Icon"
        app:layout_constraintVertical_bias="1.0" />

    <!--<TextView-->
        <!--android:id="@+id/tv_companyItem_from"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="FROM HAN AIR . group"-->
        <!--android:textColor="#FFFFFF"-->
        <!--android:textSize="13sp"-->
        <!--app:layout_constraintLeft_toLeftOf="@id/iv_companyItem_transparentRectangle"-->
        <!--app:layout_constraintTop_toTopOf="@id/iv_companyItem_transparentRectangle"-->
        <!--android:layout_marginTop="13dp"-->
        <!--android:layout_marginStart="10dp"-->
        <!--android:layout_marginLeft="20dp" />-->

    <TextView
        android:id="@+id/tv_companyItem_companyName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="海南航空控股股份有限公司"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@id/iv_companyItem_transparentRectangle"
        app:layout_constraintRight_toRightOf="@id/iv_companyItem_transparentRectangle"
        app:layout_constraintTop_toTopOf="@id/iv_companyItem_transparentRectangle"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/tv_companyItem_lineHorizontal"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grey"
        app:layout_constraintLeft_toLeftOf="@id/iv_companyItem_Icon"
        app:layout_constraintRight_toRightOf="@id/iv_companyItem_Icon"
        app:layout_constraintTop_toBottomOf="@id/iv_companyItem_Icon"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/tv_companyItem_companyAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="北京市朝阳区霄云路甲26号"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/iv_companyItem_Icon"
        app:layout_constraintTop_toBottomOf="@id/tv_companyItem_lineHorizontal"
        app:layout_constraintRight_toRightOf="@+id/tv_companyItem_lineVertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/tv_companyItem_legalPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="法人："
        android:textColor="@color/darkGrey"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@id/iv_companyItem_Icon"
        app:layout_constraintBottom_toBottomOf="@id/iv_companyItem_rectangle"
        app:layout_constraintTop_toBottomOf="@id/tv_companyItem_companyAddress"
        android:layout_marginTop="10dp"
        android:paddingBottom="15dp"/>

    <TextView
        android:id="@+id/tv_companyItem_companyLegalPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="包起发"
        android:textColor="@color/darkGrey"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@id/tv_companyItem_legalPerson"
        app:layout_constraintTop_toTopOf="@id/tv_companyItem_legalPerson"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/tv_companyItem_lineVertical"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/grey"
        app:layout_constraintRight_toRightOf="@id/iv_companyItem_Icon"
        app:layout_constraintTop_toBottomOf="@id/tv_companyItem_lineHorizontal"
        app:layout_constraintBottom_toBottomOf="@id/iv_companyItem_rectangle"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="60dp" />

    <ImageView
        android:id="@+id/iv_companyItem_star"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_star_border"
        app:layout_constraintLeft_toRightOf="@id/tv_companyItem_lineVertical"
        app:layout_constraintRight_toRightOf="@id/iv_companyItem_Icon"
        app:layout_constraintTop_toBottomOf="@id/tv_companyItem_lineHorizontal"
        app:layout_constraintBottom_toBottomOf="@id/iv_companyItem_rectangle"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp" />



</android.support.constraint.ConstraintLayout>